    <Grid Margin="20" HorizontalAlignment="Stretch">
        <Grid>
            <StackPanel Margin="20 0 0 0">
                <Label Content="Start -  Latest Errands" Foreground="#0071bc" FontSize="23" FontWeight="Medium"></Label>
            </StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>
            </Grid>
        </Grid>
        <Grid Margin="25 90 20 0" Grid.Row="0" >
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />



            </Grid.RowDefinitions>

            <TextBlock Text="Errand Id" Foreground="#0071bc" Grid.Column="0" Grid.Row="0" ></TextBlock>
            <TextBlock Text="Customer" Foreground="#0071bc"  Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" ></TextBlock>
            <TextBlock Text="Subject" Foreground="#0071bc"  Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left"></TextBlock>
            <TextBlock Text="Description" Foreground="#0071bc"  Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" ></TextBlock>
            <TextBlock Text="Status" Foreground="#0071bc"  Grid.Column="4" Grid.Row="0" HorizontalAlignment="Right"></TextBlock>
            <TextBlock Text="Status - Registered" Foreground="#0071bc" Grid.Row="3" Grid.Column="0" ></TextBlock>
            <TextBlock Text="Status - Investigating" Foreground="#0071bc" Grid.Row="3" Grid.Column="1" Background="red"></TextBlock>
            <TextBlock Text="Status - Closed" Foreground="#0071bc" Grid.Row="3" Grid.Column="2" Background="red"></TextBlock>
            <TextBlock Text="Total Errands" Foreground="#0071bc" Grid.Row="3" Grid.Column="3" ></TextBlock>
            <ListView x:Name="lvErrandss" Grid.Row="4" Grid.ColumnSpan="4" HorizontalContentAlignment="Stretch" Foreground="black" DataContext="Datalagring_Projekt.Models">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Customer.FullName}"></TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock x:Name="TEST" Grid.Column="0" Grid.Row="1" Text="Hello"></TextBlock>
            <TextBlock x:Name="TEST1" Grid.Column="1" Grid.Row="1" Text="Hello"></TextBlock>
            <TextBlock x:Name="TEST2" Grid.Column="2" Grid.Row="1" Text="Hello"></TextBlock>
            <TextBlock x:Name="TEST3" Grid.Column="3" Grid.Row="1" Text="Hello"></TextBlock>



        </Grid>

        <!--listView-->
        <ListView x:Name="lvErrands" Margin="20 130 20 26" HorizontalContentAlignment="Stretch"  Background="Transparent" Height="250" VerticalAlignment="Top" Foreground="#0071bc" DataContext="Datalagring_Projekt.Models" FontSize="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" MaxWidth="150"/>
                            <ColumnDefinition Width="*" />

                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Id}"  />
                        <TextBlock Grid.Column="1" Text="{Binding Customer.FullName}" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="2" Text="{Binding Subject}" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="3" Text="{Binding Description}" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="4" Text="{Binding Status}" HorizontalAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        
    </Grid>
</UserControl>
